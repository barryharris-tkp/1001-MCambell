---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/react/Header.tsx';
import Footer from '../components/astro/Footer.astro';
import PortalAccessForm from '../components/react/PortalAccessForm.tsx';

const currentPath = Astro.url.pathname;
---

<BaseLayout title="Client Portal | Campbell Tax Services PC">
  <div class="min-h-screen flex flex-col">
    <Header currentPath={currentPath} client:load />
    <main class="flex-1">
      <!-- Hero -->
      <section class="py-20 bg-gradient-to-br from-primary to-primary/80 text-primary-foreground">
        <div class="container mx-auto px-4 text-center">
          <h1 class="text-5xl md:text-6xl font-bold mb-6">Client Portal</h1>
          <p class="text-xl md:text-2xl max-w-3xl mx-auto opacity-95">
            Secure access to your financial documents, tax returns, and more
          </p>
        </div>
      </section>

      <!-- 3-Step Flow -->
      <section class="py-20">
        <div class="container mx-auto px-4">
          <div class="max-w-3xl mx-auto space-y-0">

            <!-- Step 1: Request Access -->
            <div class="flex gap-6 md:gap-8">
              <!-- Left: Number + Connector -->
              <div class="flex flex-col items-center">
                <div class="w-14 h-14 rounded-full bg-primary text-primary-foreground flex items-center justify-center text-xl font-bold flex-shrink-0">
                  1
                </div>
                <div class="w-0.5 flex-1 bg-border my-2"></div>
              </div>
              <!-- Right: Content -->
              <div class="pb-10 flex-1">
                <h2 class="text-2xl font-bold mb-4">Request Access</h2>
                <PortalAccessForm client:load />
              </div>
            </div>

            <!-- Step 2: Check Your Email -->
            <div class="flex gap-6 md:gap-8">
              <!-- Left: Number + Connector -->
              <div class="flex flex-col items-center">
                <div class="w-14 h-14 rounded-full bg-primary text-primary-foreground flex items-center justify-center text-xl font-bold flex-shrink-0">
                  2
                </div>
                <div class="w-0.5 flex-1 bg-border my-2"></div>
              </div>
              <!-- Right: Content -->
              <div class="pb-10 flex-1">
                <h2 class="text-2xl font-bold mb-4">Check Your Email</h2>
                <div class="rounded-lg border-2 bg-card text-card-foreground shadow-xl p-6">
                  <div class="flex items-start gap-4">
                    <!-- MailCheck SVG -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0 mt-1">
                      <path d="M22 13V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v12c0 1.1.9 2 2 2h8"/>
                      <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                      <path d="m16 19 2 2 4-4"/>
                    </svg>
                    <div>
                      <p class="text-muted-foreground text-base">
                        Once we approve your request, you'll receive an email with a secure signup link to create your portal account.
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Step 3: Access Your Portal -->
            <div class="flex gap-6 md:gap-8">
              <!-- Left: Number (no connector after last step) -->
              <div class="flex flex-col items-center">
                <div class="w-14 h-14 rounded-full bg-primary text-primary-foreground flex items-center justify-center text-xl font-bold flex-shrink-0">
                  3
                </div>
              </div>
              <!-- Right: Content -->
              <div class="flex-1">
                <h2 class="text-2xl font-bold mb-4">Access Your Portal</h2>
                <div class="rounded-lg border-2 bg-card text-card-foreground shadow-xl p-6">
                  <div class="flex items-start gap-4">
                    <!-- LogIn SVG -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0 mt-1">
                      <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"/>
                      <polyline points="10 17 15 12 10 7"/>
                      <line x1="15" x2="3" y1="12" y2="12"/>
                    </svg>
                    <div>
                      <p class="text-muted-foreground text-base mb-4">
                        Already have an account? Log in to securely access your financial documents, tax returns, and more.
                      </p>
                      <a
                        href="https://www.clientaxcess.com/#/user/login"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 h-11 px-8 bg-accent text-accent-foreground hover:bg-accent/90"
                      >
                        Log In to Client Portal
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2">
                          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                          <polyline points="15 3 21 3 21 9"/>
                          <line x1="10" x2="21" y1="14" y2="3"/>
                        </svg>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </section>

      <!-- Questions? CTA -->
      <section class="py-16 bg-primary text-primary-foreground">
        <div class="container mx-auto px-4 text-center">
          <h2 class="text-3xl font-bold mb-6">Questions?</h2>
          <p class="text-lg opacity-95 mb-8 max-w-2xl mx-auto">
            Need help accessing your portal or have questions about our services? We're here to help.
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-6 mb-8">
            <a href="mailto:Michael.campbell@cpa.com" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect width="20" height="16" x="2" y="4" rx="2"/>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
              </svg>
              Michael.campbell@cpa.com
            </a>
            <a href="tel:7312677702" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
              (731) 267-7702
            </a>
          </div>
          <a
            href="/contact"
            class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 h-11 px-8 bg-white text-primary hover:bg-white/90"
          >
            Contact Us
          </a>
        </div>
      </section>
    </main>
    <Footer />
  </div>
</BaseLayout>
